@model MCVTest01.Models.ProductModel

@{
    var product = ViewData["Product"] as ProductModel;
}
<p>@ViewData["Title"]</p>
<div class="card bg-danger text-white">
    <h1 class="card-header">@product.NameOfProduct</h1>
    <div class="card-body">
        <p class="card-text">
            Price: @product.Price
        </p>
    </div>
</div>